{%extends 'base.njk'%}

{%block content%}
  <h1>請點擊右上角登錄進入管理員頁面添加照片~</h1>
  <div class="row">
    {%for album in albumArr %}
      {{item(album.name)}}
    {%endfor%}
  </div>
{%endblock%}

{%macro item(name)%}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="/image/wjj.jpeg" alt="...">
      <div class="caption">
        <h3>{{name}}</h3>
        <p><a href={{name}} class="btn btn-primary" role="button">点击进入</a></p>
      </div>
    </div>
  </div>
{%endmacro%}